    <android.support.v7.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="visible">
            <ImageView
                android:id="@+id/ivImgProduk"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/img_content_des"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_toRightOf="@+id/ivImgProduk"
                android:layout_toEndOf="@+id/ivImgProduk"
                android:orientation="vertical">
                <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                    android:id="@+id/tvNamaProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"/>
                <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                    android:id="@+id/tvSkuArtikelProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
                <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                    android:id="@+id/tvHargaProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/red500"/>
                <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                    android:id="@+id/tvPromoProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/red500"/>
                <LinearLayout
                    android:id="@+id/layout_qty_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/decrease"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:text="@string/text_btn_decrease_item"
                        />
                    <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                        android:id="@+id/tv_item_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="11dp"
                        android:text="@string/text_qty_minimum_item"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                    <Button
                        android:id="@+id/increase"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:text="@string/text_btn_increase_item"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_icon_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/baseline_delete_forever_black_24"

                android:contentDescription="@string/img_content_des"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
