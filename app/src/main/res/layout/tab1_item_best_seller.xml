<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="tab1"
            type="com.example.tomz.electroniccity.page.bn_home_content.tab1.Tab1ItemViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cvTab1"
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:background="@color/grey300"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:padding="6dp"
            android:orientation="vertical"
            android:onClick="@{tab1.onReadMoreClicked}">
            <ImageView
                android:id="@+id/imageViewCover"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:imageViewBerak="@{tab1.imageUrl}"
                android:contentDescription="@string/img_content_des"/>
            <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{tab1.nameProd}"
                android:textColor="@color/black" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                    android:id="@+id/tv_normal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{tab1.realPrice}" />
                <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_normal_price"
                    android:layout_toRightOf="@+id/tv_normal_price"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/red500"/>
            </RelativeLayout>
            <com.example.tomz.electroniccity.utils.font.CustomTextViewLatoFont
                android:id="@+id/tv_spc_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@{tab1.spcPrice}" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>